<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_study_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amylilian.text_card.StudyContentActivity"
    android:background="@drawable/bg_learn">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="48dp"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/category"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView3"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="160dp"
        app:srcCompat="@drawable/category"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/imageView4"
        android:scaleType="centerCrop"
        android:layout_height="90dp" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/btm_sound_a"
        android:id="@+id/soundButton_studyfirst"
        android:scaleType="centerCrop"
        android:layout_above="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="14dp"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/btm_right_a"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/nextpageButton_studyfirst"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginBottom="18dp"
        android:layout_alignEnd="@+id/imageView4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_chinese"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_above="@+id/textView28"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1View_studyfirst"
        android:textSize="24sp"
        android:layout_above="@+id/imageView4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
